{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "ESNext", "ES6"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
